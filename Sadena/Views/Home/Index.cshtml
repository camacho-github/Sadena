@{
    ViewData["Title"] = "Inicio";
}

<!-- Page content -->
<div class="page-content">

    <!-- Content -->
    <div class="container-fluid">
        <!--Main -->
        <section>
            <div class="row">
                <div class="col-sm-12">
                    <form action="/Home/Login">
                        <!-- Welcome information -->
                        <div class="jumbotron">
                            <h1>SADENA</h1>
                            <p>Programa para realizar la comparación de nacimientos con los ya registrados, identificando los registrados, subregistrados y los no registrados.</p>
                            <p><button type="submit" class="btn btn-primary">Ingresar</button></p>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <!-- Partners -->
        <section>
            <!-- Logos -->
            <div class="row" style="margin-left:5%;">
                <div class="col-sm-3">
                    <div class="image-container">
                        <img class="img-logo" alt="Logo del Gobierno de Coahuila de Zaragoza" src="~/images/cohauila-gob-logo.png">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="image-container">
                        <img class="img-logo" alt="Logo del BID" src="~/images/bid-logo.png">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="image-container">
                        <img class="img-logo" alt="Logo del Gobierno de Canada" src="~/images/canada-logo.png">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="image-container">
                        <img class="img-logo" alt="Logo del Registro Civil de la Secretaría de Gobernación" src="~/images/regcivil-gob-logo.png">
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.content -->

</div>
<!-- ./page content -->